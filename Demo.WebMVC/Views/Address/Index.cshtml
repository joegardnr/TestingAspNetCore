@model Address
@{
    ViewData["Title"] = "Address Page";
}

    <div class="text-center">
        <h1 class="display-4">Address</h1>
    </div>
    <div>
        <form action="/address" method="post">
            <div class="form-group row">
                <label for="line1" class="col-sm-2 col-form-label">Line 1</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="line1" name="line1" value="@Model.Line1" />
                </div>
            </div>
            <div class="form-group row">
                <label for="line2" class="col-sm-2 col-form-label">Line 2</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="line2" name="line2" value="@Model.Line2" />
                </div>
            </div>
            <div class="form-group row">
                <label for="city" class="col-sm-2 col-form-label">City</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="city" name="city" value="@Model.City" />
                </div>
            </div>
            <div class="form-group row">
                <label for="state" class="col-sm-2 col-form-label">State</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="state" name="state" value="@Model.State" />
                </div>
            </div>
            <div class="form-group row">
                <label for="zip" class="col-sm-2 col-form-label">Zip</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="zip" name="zip" value="@Model.Zip" />
                </div>
            </div>
            <input type="hidden" id="id" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

